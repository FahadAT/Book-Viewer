<body>
  <header>
    <nav class="Home-nav">
      <ul>
          <li><a class="nav-btn" href="/">Homepage</a></li>
          <li><a class="nav-btn" href="#">Books</a></li>
          <li><a class="nav-btn" href="/">About us</a></li>
          <li><a class="nav-btn" href="/">Contact us</a></li>
      </ul>
  </nav>
  </header>
    <div class="container">
        
          <div class="card" >
            <img src="<%= '/' + book.image %>" alt="<%= book.title %>">
            <h2><%= book.title %></h2>
            <p>Author: <%= book.author %></p>
            <p>Publisher: <%= book.publisher %></p>
            <p>description: <%= book.description%></p>
            <p><% if (isAdmin) { %>
              <a href="<%='/update/' + book.id %>" class="button2">Edit</a>
              <a href="<%='/delete/' + book.id %>" class="button2">Delete</a>
            <% } %></p>
          </div>
          <input type="hidden" name="id" value="<%=book.id%>">
      </div>
</body>
</html>